root = true

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4


# Matches the exact files either package.json or .travis.yml
[{package.json,*.yml}]
indent_style = space
indent_size = 2

[{*.js,*.jsx}]
indent_style = space
indent_size = 2
